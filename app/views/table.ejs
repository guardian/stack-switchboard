<% for (const group of groups) { %>
<tr>
    <td ><%= group.tags["aws:cloudformation:stack-name"] %></td>
    <td ><%= group.tags.Stage %></td>
    <td><%= group.name %></td>
    <td ><%= group.group.MinSize %></td>
    <td ><%= group.group.DesiredCapacity %></td>
    <td ><%= group.group.MaxSize %></td>
    <td >
        <% if (group.group.DesiredCapacity === group.group.MinSize) { %>
            <span style="color: lightgreen">Desired: <%= group.group.DesiredCapacity %></span>
        <% } else { %>
            <span style="color: palevioletred">Desired: <%= group.group.DesiredCapacity %></span>
        <% } %>
    </td>
    <td style="min-width: 5%">
        <form>
            <input type="hidden" name="stackName" value="<%= group.name %>">
            <input type="hidden" name="min"       value="<%= group.group.MinSize %>">
            <input type="hidden" name="max"       value="<%= group.group.MaxSize %>">
            <input type="hidden" name="desired"   value="<%= group.group.DesiredCapacity %>">
            <button type="button" class="btn btn-warning" onclick="doTheThing(event)">Scale down</button>
        </form>
    </td>
</tr>
<% } %>